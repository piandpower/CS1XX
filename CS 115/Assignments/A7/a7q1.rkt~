(define (max-pwr2-factor even num)
  (cond [(not (equal? (remainder even 2) 0)) even]
        [(not (equal? (remainder even num) 0)) num]
        [else (max-pwr2-factor even (* num 2))]))

(max-pwr2-factor 40 2) ; to get number then 

