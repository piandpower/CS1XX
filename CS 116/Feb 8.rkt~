;; Feb 8th 

(define-struct triangle (vertex1 vrtex2 vertex3))
;; a triangle is a structure (make-triangle v1 v2 v3))
;; where v1,v2,v3 are all posn (for the three vertices of the triangle).

(define tri-1 (make-triangle (make-posn 0 0)
                             (make-posn 1 1)
                             (make-posn -1 1)))
(define tri-2 tri-1)
tri-1
tri-2